---
kind: StorageClass
apiVersion: storage.k8s.io/v1
metadata:
  name: kadalu.external.{{ volname }}
provisioner: kadalu
parameters:
  hostvol_type: "External"
  gluster_host: {{ gluster_host }}
  gluster_volname: {{ gluster_volname }}
{%- if gluster_volname != "" %}
  gluster_options: {{ gluster_options }}
{%- endif %}
  # Subdir inside this volume would be a PV
  kadalu-format: "true"
